<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
     package="org.me.cmsapp">
    <application>
         <activity android:name=".MainView" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UsersView"
              android:label="@string/app_name">
        </activity>
            <activity android:name=".U_Users"
                  android:theme="@android:style/Theme.NoTitleBar">
            </activity>
            <activity android:name=".U_Information"
                  android:theme="@android:style/Theme.NoTitleBar">
            </activity>
        <activity android:name=".PagesView"
              android:label="@string/app_name">
        </activity>
            <activity android:name=".P_Pages"
                  android:theme="@android:style/Theme.NoTitleBar">
            </activity>
            <activity android:name=".P_General"
                  android:theme="@android:style/Theme.NoTitleBar">
            </activity>
            <activity android:name=".P_Content"
                  android:theme="@android:style/Theme.NoTitleBar">
            </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
