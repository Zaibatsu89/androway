<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.0">

    <ImageButton
        android:id="@+id/log_web_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@null"
        android:layout_weight="0.25"
        style="@style/StatusBarLeft" />

    <ImageButton
        android:id="@+id/battery_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/battery_icon"
        android:layout_weight="0.25"
        style="@style/StatusBarMiddle" />

    <ImageButton
        android:id="@+id/on_hold_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/on_hold_active_icon"
        android:layout_weight="0.25"
        style="@style/StatusBarMiddle" />

    <ImageButton
        android:id="@+id/do_360_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/do_360_icon"
        android:layout_weight="0.25"
        style="@style/StatusBarRight" />

</LinearLayout>