<?xml version="1.0" encoding="UTF-8"?>
<!-- The landscape direction layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/BlockComponent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textSize="19sp"
	android:textColor="#FFF"
        android:text="0Â°" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip"
        android:src="@drawable/inclination_bg" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-159dip"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/segway_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:src="@drawable/segway_body_inclination" />

        <!-- Used to keep the lego_wheel in a static position -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dip"
            android:src="@drawable/lego_wheel" />
            
    </LinearLayout>
</LinearLayout>